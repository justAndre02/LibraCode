           "200": {
             "description": "A lista dos livros",
             "schema": {
               "type": "array",
               "items": {
                "$ref": "#/definitions/livros"
              }
            }
           },
          "400": {
              "description": "Algo correu mal"
          },
          "500": {
            "description": "Ocorreu algum erro para obter os dados dos livros"
