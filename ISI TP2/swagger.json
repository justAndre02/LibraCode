{
  "swagger": "2.0",
  "info": {
    "name": "isi-tp2",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/livro": {
      "get": {
         "summary": "Todos os livros",
         "tags":["livro"],
         "parameters": [
          {
             "name": "lista",
             "in": "query",
             "description": "Lista de todos os livros disponiveis",
             "required": false,
             "type": "integer",
             "format": "int32"
           }
        ],
        "responses": {
           "200": {
             "description": "A lista dos livros",
             "schema": {
               "type": "array",
               "items": {
                "$ref": "#/definitions/livros"
              }
            }
           },
          "400": {
              "description": "Algo correu mal"
          }
        }
       }
     },
     "/api/livro/{id}": {
       "get": {
         "summary": "Mostra o livro cuja id selecionas-te",
         "tags":["livro"],
         "operationId":"getLivroById",
        "parameters": [
          {
            "name": "id",
             "in": "path",
             "description": "ID do livro",
            "required": true,
            "type": "integer",
             "format": "int64"
         }
         ],
         "responses": {
           "200": {
             "description": "ID Livro",
             "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/livros"
              }
             }
           },
           "400": {
              "description": "Algo correu mal"
          }
        }
       }
    },
    "/user/register": {
      "post": {
        "summary": "Registar Utilizador",
        "tags":["Utilizador"],
        "operationId":"postUser",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cria um Utilizador",
            "required": true,
            "type": "string",
            "schema": {
              "$ref": "#/definitions/users"
            }
        }
        ],
        "responses": {
          "200": {
            "description": "Utilizador registado",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/users"
              }
            }
          },
          "400": {
              "description": "Algo correu mal"
          }
        }
      }
    }
  },
  "definitions": {
    "livros": {
      "type": "object",
      "properties": {
        "bookID": {
        "type": "integer",
          "format": "int64"
        },
        "title": {
          "type": "string"
        },
        "authors": {
          "type": "string"
        },
        "average_rating": {
          "type": "string"
        },
        "isbn": {
          "type": "string"
        },
        "num_pages": {
          "type": "int"
        },
        "publication_date": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        }
      }
    },
    "users": {
      "type": "object",
      "properties": {
        "nome": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "nif": {
          "type": "integer",
          "format": "int64"
        },
        "TipoUtilizador_id": {
          "type": "integer",
          "format": "int64"
        }  
      }
    }
  }
}