<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="registerStep1VM" type="com.paipbook.app.modules.registerstep1.data.viewmodel.RegisterStep1VM"/>
    </data>
    <FrameLayout android:id="@+id/frameRegisterstep"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageRectangle"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_rectangle"
            tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle"/>
        <LinearLayout android:id="@+id/linearColumnreply"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_7pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <ImageView android:id="@+id/imageReply"
                android:layout_gravity="start"
                android:layout_height="@dimen/_11pxh"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_width="@dimen/_12pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_reply"
                tools:ignore="ContentDescription" tools:src="@drawable/img_reply"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtRegisto"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_41pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{registerStep1VM.registerStep1Model.txtRegisto}"
                style="@style/txtRobotoromanregular36" tools:text="@string/lbl_registo2"/>
            <EditText
                android:background="@drawable/rectangle_bg_white_a700_border_green_903"
                android:ellipsize="end"
                android:hint="Email"
                android:id="@+id/etComponent" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_17pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@={registerStep1VM.registerStep1Model.etComponentValue}"
                android:textColorHint="@color/green_903"
                style="@style/etSolidOutline" tools:ignore="Autofill"/>
            <EditText
                android:background="@drawable/rectangle_bg_white_a700_border_green_903"
                android:ellipsize="end" android:hint="@string/lbl"
                android:id="@+id/etComponentOne"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_17pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@={registerStep1VM.registerStep1Model.etComponentOneValue}"
                android:textColorHint="@color/green_903"
                style="@style/etSolidOutline" tools:ignore="Autofill"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnNext"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_width="match_parent"
                android:letterSpacing="0.03"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@string/lbl_next"
                android:textAllCaps="true"
                style="@style/btnSolidRoundedOutline_1" tools:text="@string/lbl_next"/>
        </LinearLayout>
    </FrameLayout>
</layout>
